{
	"compilerOptions": {
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2018",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"allowJs": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			]
		}
	},
	"exclude": [
		"node_modules"
	]
}
